{
  "name": "@knighted/module",
  "version": "1.0.0-beta.0",
  "description": "Transforms differences between ES modules and CommonJS.",
  "type": "module",
  "main": "dist/module.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/module.d.ts",
        "default": "./dist/module.js"
      },
      "require": {
        "types": "./dist/cjs/module.d.cts",
        "default": "./dist/cjs/module.cjs"
      },
      "default": "./dist/module.js"
    },
    "./package.json": "./package.json"
  },
  "imports": {
    "#parse": "./src/parse.js",
    "#format": "./src/format.js",
    "#utils": "./src/utils.js",
    "#helpers/*": "./src/helpers/*.js",
    "#formatters/*": "./src/formatters/*.js"
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "engineStrict": true,
  "scripts": {
    "check-types": "tsc --noEmit",
    "prettier": "prettier -w .",
    "lint": "eslint --ignore-pattern dist .",
    "test": "c8 --reporter=text --reporter=text-summary --reporter=lcov tsx --test --test-reporter=spec test/*.ts",
    "build:types": "tsc --emitDeclarationOnly",
    "build:dual": "babel-dual-package src --extensions .ts",
    "build": "npm run build:types && npm run build:dual",
    "prepack": "npm run build"
  },
  "keywords": [
    "transform",
    "es module",
    "commonjs",
    "require",
    "require.resolve",
    "import.meta.url",
    "import.meta.dirname",
    "__dirname",
    "__filename"
  ],
  "files": [
    "dist"
  ],
  "author": "KCM <knightedcodemonkey@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/knightedcodemonkey/module.git"
  },
  "bugs": {
    "url": "https://github.com/knightedcodemonkey/module/issues"
  },
  "devDependencies": {
    "@babel/parser": "^7.27.0",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@babel/types": "^7.27.0",
    "@eslint/js": "^9.3.0",
    "@knighted/dump": "^1.0.3",
    "@types/node": "^22.13.17",
    "babel-dual-package": "^1.2.3",
    "c8": "^10.1.3",
    "eslint": "^9.23.0",
    "eslint-plugin-n": "^17.7.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.29.0"
  },
  "dependencies": {
    "@knighted/specifier": "^2.0.6",
    "@knighted/walk": "^1.0.0-rc.2",
    "magic-string": "^0.30.17",
    "node-module-type": "^1.0.2",
    "oxc-parser": "^0.71.0"
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 90,
    "semi": false,
    "singleQuote": true
  }
}
